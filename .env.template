# Production Environment Variables for Dexter v3
# Copy this file to .env.production and update values as needed

# Database Configuration
DEXTER_DB_PATH=m:/gliksbot/dexter.db

# VM Configuration
DEXTER_VM_PASSWORD=YourSecureVMPassword123!
DEXTER_VM_NAME=DexterVM

# Domain Configuration
DEXTER_DOMAIN=www.gliksbot.com
DEXTER_SSL_CERT_PATH=m:/gliksbot/ssl/gliksbot.com.pfx
DEXTER_SSL_CERT_PASSWORD=YourCertPassword

# Service Account (if using domain authentication)
DEXTER_SERVICE_ACCOUNT=GLIKSBOT\svc-dexter
DEXTER_SERVICE_PASSWORD=YourServiceAccountPassword

# API Keys (configure as needed)
OPENAI_API_KEY=your_openai_api_key_here
NEMOTRON_API_KEY=your_nemotron_api_key_here

# Logging Configuration
DEXTER_LOG_LEVEL=INFO
DEXTER_LOG_PATH=m:/gliksbot/logs

# Security Configuration
DEXTER_JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters
DEXTER_ENCRYPTION_KEY=your_encryption_key_for_sensitive_data_32_chars

# Performance Configuration
DEXTER_MAX_WORKERS=4
DEXTER_MEMORY_LIMIT=2GB

# Backup Configuration
DEXTER_BACKUP_ENABLED=true
DEXTER_BACKUP_RETENTION_DAYS=30
DEXTER_BACKUP_PATH=m:/gliksbot/backups

# Development Settings (set to false for production)
DEXTER_DEBUG=false
DEXTER_DEV_MODE=false
